function renderBackground(imgUrl){
    /* Background slideshow */
    $('.top-content').backstretch(imgUrl);
    $('#top-navbar-1').on('shown.bs.collapse hidden.bs.collapse', function(){
    	$('.top-content').backstretch("resize");
    });
}
